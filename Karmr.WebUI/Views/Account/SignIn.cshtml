@model Karmr.WebUI.Models.LoginViewModel
@{
    ViewBag.Title = "Sign In / Register";
    ViewBag.BodyClass = "about-page";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Sign In / Register</h1>
            </div>
        </div>
    </div>
</div>

<div class="contact-page-wrap">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="entry-content">
                    @using (Html.BeginForm("SignIn", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "contact-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2>Sign In</h2>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email)
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                        <a href="@Url.Action("ForgotPassword", "Account")">Forgot your password?</a>
                        <p>
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </p>
                        <span><input class="btn gradient-bg" type="submit" value="Sign In"></span>
                    }
                </div>
            </div>
            <div class="col-12 col-lg-6">
                <div class="entry-content">
                    <div class="contact-form">
                        <h2>Register</h2>
                        <p>Don't have an account yet? Please click <a href="@Url.Action("Register", "Account")">here</a> to register.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
