@model Karmr.WebUI.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    ViewBag.BodyClass = "about-page";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Change Password</h1>
            </div>
        </div>
    </div>
</div>

<div class="contact-page-wrap">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-7">
                <div class="entry-content">
                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "contact-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2>Change Password</h2>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.OldPassword)
                        @Html.PasswordFor(m => m.OldPassword)
                        @Html.LabelFor(m => m.NewPassword)
                        @Html.PasswordFor(m => m.NewPassword)
                        @Html.LabelFor(m => m.ConfirmPassword)
                        @Html.PasswordFor(m => m.ConfirmPassword)
                        <span><input class="btn gradient-bg g-recaptcha" type="submit" value="Continue"></span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}