@model Karmr.WebUI.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    ViewBag.BodyClass = "about-page";
    Layout = "../Shared/_Layout.cshtml";
}

<div class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Forgot Password</h1>
            </div>
        </div>
    </div>
</div>

<div class="contact-page-wrap">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-6">
                <div class="entry-content">
                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "contact-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h2>Forgot your password?</h2>
                        <p>Enter your email address below and click "Continue".</p>
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email)
                        <span><input class="btn gradient-bg" type="submit" value="Continue"></span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}